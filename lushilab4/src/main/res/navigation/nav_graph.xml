<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="lushi.cao.s301011302.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_viewInformationFragment3"
            app:destination="@id/viewInformationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewInformationFragment"
        android:name="lushi.cao.s301011302.fragment.ViewInformationFragment"
        android:label="fragment_view_information"
        tools:layout="@layout/fragment_view_information" >
        <action
            android:id="@+id/action_viewInformationFragment_to_addPatientFragment"
            app:destination="@id/addPatientFragment" />
        <action
            android:id="@+id/action_viewInformationFragment_to_addTestFragment"
            app:destination="@id/addTestFragment" />
        <action
            android:id="@+id/action_viewInformationFragment_to_testListFragment"
            app:destination="@id/testListFragment" />
        <action
            android:id="@+id/action_viewInformationFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTestFragment"
        android:name="lushi.cao.s301011302.fragment.AddTestFragment"
