        android:id="@+id/patientListFragment"
        android:name="lushi.cao.s301011302.fragment.MyPatientFragment"
        android:label="fragment_patient_list"
        tools:layout="@layout/fragment_patient_list" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="lushi.cao.s301011302.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_patientListFragment"
            app:destination="@id/patientListFragment" />
        <action
            android:id="@+id/action_searchFragment_to_testListFragment"
            app:destination="@id/testListFragment" />
    </fragment>
</navigation>