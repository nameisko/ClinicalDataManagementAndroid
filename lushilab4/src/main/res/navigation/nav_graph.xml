<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="lushi.cao.s301011302.fragment.LushiFragmentHome"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_viewInformationFragment3"
            app:destination="@id/viewInformationFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewInformationFragment"
        android:name="lushi.cao.s301011302.fragment.LushiFragmentViewInformation"
        android:label="View Information"
        tools:layout="@layout/fragment_view_information">
        <action
            android:id="@+id/action_viewInformationFragment_to_addPatientFragment"
            app:destination="@id/addPatientFragment" />
        <action
            android:id="@+id/action_viewInformationFragment_to_addTestFragment"
            app:destination="@id/addTestFragment" />
        <action
            android:id="@+id/action_viewInformationFragment_to_testListFragment"
            app:destination="@id/testListFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTestFragment"
        android:name="lushi.cao.s301011302.fragment.LushiFragmentAddTest"
        android:label="Add Test"
        tools:layout="@layout/fragment_add_test" />
    <fragment
        android:id="@+id/addPatientFragment"
        android:name="lushi.cao.s301011302.fragment.LushiFragmentAddPatient"
        android:label="Add Patient"
        tools:layout="@layout/fragment_add_patient" />
    <fragment
        android:id="@+id/testListFragment"
        android:name="lushi.cao.s301011302.fragment.LushiFragmentTestList"
        android:label="Test Records"
        tools:layout="@layout/fragment_test_list" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="lushi.cao.s301011302.fragment.LushiFragmentSearch"
        android:label="Search and Filter"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/allPatientFragment"
        android:name="lushi.cao.s301011302.fragment.LushiFragmentAllPatients"
        android:label="All Patients"
        tools:layout="@layout/fragment_all_patient" />
</navigation>