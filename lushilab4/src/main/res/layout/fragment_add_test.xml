<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addTestLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_brown"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".fragment.LushiFragmentAddTest">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/lushiPatientNameTV"
            style="@style/formTextViewStyle"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_patient" />

        <Spinner
            android:id="@+id/lushiPatientSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/lushiBloodPressureTV"
            style="@style/formTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/blood_pressure" />

        <EditText
            android:id="@+id/lushiBloodPressureET"
            style="@style/formEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_blood_pressure"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lushirespiratoryRateTV"
            style="@style/formTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/respiratory_rate" />

        <EditText
            android:id="@+id/lushirespiratoryRateET"
            style="@style/formEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_respiratory_rate_bpm"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lushiBloodOxygenTV"
            style="@style/formTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/blood_oxygen_level" />

        <EditText
            android:id="@+id/lushiBloodOxygenET"
            style="@style/formEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_blood_oxygen_level"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lushiHeartRateTV"
            style="@style/formTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/heart_rate" />

        <EditText
            android:id="@+id/lushiHeartRateET"
            style="@style/formEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_heart_rate_bpm" />

        <TextView
            android:id="@+id/lushiCovidTestTV"
            style="@style/formTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/covid_19" />

        <RadioGroup
            android:id="@+id/lushiCovidRadioGp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/lushiCovidPoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/positive" />

            <RadioButton
                android:id="@+id/lushiCovidNeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/negative" />
        </RadioGroup>

        <TextView
            android:id="@+id/lushiTestDateTV"
            style="@style/formTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_date" />

        <EditText
            android:id="@+id/lushiTestDateET"
            style="@style/formEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/select_date"
            android:longClickable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/lushiAddTestBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/buttonStyle"
            android:text="@string/add_test" />
    </LinearLayout>
</LinearLayout>