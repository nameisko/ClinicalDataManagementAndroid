<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/addTestLayout"
    tools:context=".fragment.LushiFragmentAddTest">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/lushiPatientNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="patient name" />

    <Spinner
        android:id="@+id/lushiPatientSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/lushiBloodPressureTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood pressure" />

    <EditText
        android:id="@+id/lushiBloodPressureET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="blood pressure" />

    <TextView
        android:id="@+id/lushirespiratoryRateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respiratory rate in BPM" />

    <EditText
        android:id="@+id/lushirespiratoryRateET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Breathes/minute" />
    <TextView
        android:id="@+id/lushiBloodOxygenTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood oxygen level in percentage" />

    <EditText
        android:id="@+id/lushiBloodOxygenET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="%" />
    <TextView
        android:id="@+id/lushiHeartRateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heart rate" />

    <EditText
        android:id="@+id/lushiHeartRateET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Beats/minute" />
    <TextView
        android:id="@+id/lushiCovidTestTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="covid19 test" />

    <RadioGroup
        android:id="@+id/lushiCovidRadioGp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/lushiCovidPoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="positive" />

        <RadioButton
            android:id="@+id/lushiCovidNeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="negative" />
    </RadioGroup>

    <TextView
        android:id="@+id/lushiTestDateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test date" />

    <EditText
        android:id="@+id/lushiTestDateET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:longClickable="false"
        android:ems="10"
        android:hint="select date" />

    <Button
        android:id="@+id/lushiAddTestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit" />

</LinearLayout>