<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp">
    <TableLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TextView
                android:id="@+id/lushiDateTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test date:" />

            <TextView
                android:id="@+id/lushiDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TextView
                android:id="@+id/lushiBPTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blood_pressure" />

            <TextView
                android:id="@+id/lushiBPTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TextView
                android:id="@+id/lushiRespTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/respiratory_rate"/>

            <TextView
                android:id="@+id/lushiRespTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TextView
                android:id="@+id/lushiOxygenTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blood_oxygen_level"/>

            <TextView
                android:id="@+id/lushiOxygenTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TextView
                android:id="@+id/lushiHeartTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heart_rate"/>

            <TextView
                android:id="@+id/lushiHeartTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TextView
                android:id="@+id/lushiCovidTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/covid_19"/>

            <TextView
                android:id="@+id/lushiCovidTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>